<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bnView"
        app:menu="@menu/bottom_menu"
        android:background="@color/white"
        android:layout_alignParentBottom="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="35sp"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/discover"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Parkalot!"
                android:layout_below="@+id/txt_about"
                android:textSize="20dp"
                android:padding="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textStyle="bold"
                android:id="@+id/txtp1"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are dedicated to revolutionizing the way you park, making your parking experience seamless and hassle-free. Our user-friendly app provides a convenient platform for drivers to find and reserve parking spaces in real-time, ensuring you never waste time searching for a spot again. Whether you're heading to work, going shopping, or attending an event, our application enables you to locate available parking options nearby and easily navigate to them with our integrated maps feature. With our secure payment system, you can effortlessly pay for your parking and even extend your reservation remotely, giving you full control over your parking needs. Say goodbye to the stress of circling around crowded lots or worrying about parking availabilityâ€”our app is here to simplify your parking journey."
                android:textSize="20dp"
                android:padding="20dp"
                android:justificationMode="inter_word"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_below="@+id/txtp1"
                android:textColor="@color/black"></TextView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
